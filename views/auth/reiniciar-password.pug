extends ../layout/app

block contenido
  .py-10
    h1.text-4xl.my-10.font-extrabold.text-center Bienes
      span.font-normal Raices
    h2.text-center.text-2xl.font-semibold= pagina

    if errores
        each error in errores
          .max-w-md.mx-auto.my-10
            p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

    .mt-8.mx-auto.max-w-lg
      .bg-white.py-8.px-4.shadow.rounded-lg
        form.space-y-6(method='POST' noValidate)
          //- input(type="hidden", name="_csrf" value= csrfToken)
          .flex.flex-col.flex-grow 
            label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="password") Password
            input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Ingresa tu password" type="password" name="password" class="focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:border-transparent")
          .flex.flex-col.flex-grow 
            label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="repPassword") Confirma tu Password
            input#rep_password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Repite tu password" type="password" name="repPassword" class="focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:border-transparent")
          
          .flex.items-center.justify-between
            p.text-gray-500.text-xs ¿Ya tienes cuenta?
              a.text-gray-500.text-xs.font-bold(href="/auth/login")  Inicia Sesión
            a.text-gray-500.text-xs.font-bold(href="/auth/olvide-password") Olvide mi contraseña
          
          input(class="mx-auto text-center px-2 w-fit rounded bg-[#142906] text-white font-bold py-3 cursor-pointer hover:focus:outline-none focus:ring-2 focus:ring-gray-600 focus:ring-opacity-50 transform hover:scale-105 text-xs md:text-base" type="submit" value="Reiniciar Contraseña")