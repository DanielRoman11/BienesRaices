extends ../layout/index

block contenido
  .py-10
    h1.text-4xl.my-10.font-extrabold.text-center Bienes
      span.font-normal Raices
    h2.text-center.text-2xl.font-semibold= pagina

    if errores
      .max-w-md.mx-auto.my-10
        each error in errores
          p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

    .mt-8.mx-auto.max-w-lg
      .bg-white.py-8.px-4.shadow.rounded-lg
        form.space-y-6(method='POST' action="/auth/registro" noValidate)
          //- input(type="hidden", name="_csrf" value= csrfToken)
          .flex.flex-col.flex-grow 
            label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="nombre") Nombre
            input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Ingresa tu nombre" type="text" name="nombre" class="focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:border-transparent" value= usuario ? usuario.nombre: '')
          .flex.flex-col.flex-grow 
            label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="email") Email
            input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Ingresa tu email" type="email" name="email" class="focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:border-transparent" value= usuario ? usuario.email: '')
          .flex.flex-col.flex-grow 
            label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="password") Password
            input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Ingresa tu password" type="password" name="password" class="focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:border-transparent")
          .flex.flex-col.flex-grow 
            label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="rep_password") Confirma tu Password
            input#rep_password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Repite tu password" type="password" name="rep_password" class="focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:border-transparent")
          
          .flex.items-center.justify-between
            p.text-gray-500.text-xs ¿Ya tienes cuenta?
              a.text-gray-500.text-xs.font-bold(href="/auth/login")  Inicia Sesión
            a.text-gray-500.text-xs.font-bold(href="/auth/olvide-password") Olvide mi contraseña
          
          input(class="mx-auto px-2 w-fit bg-[#4C4B16] rounded hover:focus:outline-none focus:ring-2 focus:ring-gray-600 focus:ring-opacity-50 transform hover:scale-105 text-white font-bold py-3 cursor-pointer" type="submit" value="Crear Cuenta")