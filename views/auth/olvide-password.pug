extends ../layout/app

block contenido
  .py-10
    h1.text-center.text-2xl.font-semibold.text-secondary= pagina

    if errores
      div(class="max-w-md mx-auto my-10")
        each error in errores
          p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

    .mt-8.mx-auto.max-w-lg
      .bg-white.py-8.px-4.shadow.rounded-lg
        form.space-y-7(method="POST" action="/auth/olvide-password" noValidate)
          //- //- input(type="hidden", name="_csrf" value= csrfToken)
          div   
            label.block.text-sm.uppercase.text-secondary.mb-1.font-bold(for="email") Recupera tu cuenta
            input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Ingresa tu email" type="email" name="email" class="focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:border-transparent" autofocus value= email ? email : "" )
          .flex.items-center.justify-between
            p.text-secondary.text-xs ¿No tienes cuenta? 
              a.text-secondary.text-xs.font-semibold.underline.decoration-2.underline-offset-2(href="/auth/registro") Registrate
            p.text-secondary.text-xs ¿Ya tienes cuenta? 
              a.text-secondary.text-xs.font-bold.underline.decoration-2.underline-offset-2(href="/auth/login") Inicia Sesión
          input(class="mx-auto text-center px-2 w-fit bg-secondary text-white font-bold py-3 cursor-pointer rounded hover:focus:outline-none focus:ring-2 focus:ring-gray-600 focus:ring-opacity-50 transform hover:scale-105" type="submit" value="Enviar email")

