extends ../layout/admin

block contenido
  .py-10
    h1.text-4xl.my-10.font-extrabold.text-center Bienes
      span.font-normal Raices
    h2.text-center.text-2xl.font-semibold= pagina
    .flex.pt-10
      a(class="bg-[#4C4B16] px-10 py-2 hover:focus:outline-none focus:ring-4 focus:ring-opacity-75 transform hover:scale-105 text-xs md:text-base focus:ring-yellow-200 w-full text-center md:w-auto md:mb-5 rounded-md text-white font-bold" href="/propiedades/crear") Publicar una propiedad

  //- pre= JSON.stringify(propiedades, undefined, 3)
    
  if propiedades.length
    div(class="w-full flex justify-evenly gap-3 md:gap-4 flex-wrap")
      each propiedad in propiedades
        div(class="bg-white w-full h-full sm:h-[500px] sm:w-72 md:w-80 rounded-md overflow-hidden border-2 border-gray-300 hover:border-yellow-300 delay-100")
          div(class="flex h-1/2 relative")
            img(src=`uploads/${propiedad.imagen}` alt=`Imagen propiedad ${propiedad.titulo}` class="block w-full flex-grow basis-0")
            p(class="absolute top-2 left-2 flex items-center text-ellipsis font-bold whitespace-pre-line overflow-hidden text-sm bg-white/40 backdrop-blur rounded-md px-4 py-1")
              svg(xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-5")
                path(stroke-linecap="round" stroke-linejoin="round" d="M2.25 12l8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25")
              = propiedad.categoria.nombre
          div(class="space-y-3 p-3 truncate flex flex-col justify-between h-1/2")
            div.truncate
              a(class="text-xl font-extrabold text-[#898121]" href="#")= propiedad.titulo
              p(class="text-ellipsis font-semibold whitespace-pre-line overflow-hidden flex text-gray-500")= propiedad.descripcion
            div(class="flex flex-col justify-items-end")
              p(class="text-ellipsis font-bold whitespace-pre-line overflow-hidden flex text-gray-700")= propiedad.precio.nombre
              p(class="border-t border-gray-400")= propiedad.calle
  else
    p.text-center.font-bold.text-2xl No hay propiedades