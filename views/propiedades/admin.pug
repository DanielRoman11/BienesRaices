extends ../layout/admin

block contenido
  .py-10
    h1.text-4xl.my-10.font-extrabold.text-center Bienes
      span.font-normal Raices
    h2.text-center.text-2xl.font-semibold= pagina
    .flex.pt-10
      a(class="bg-[#4C4B16] px-10 py-2 hover:focus:outline-none focus:ring-4 focus:ring-opacity-75 transform hover:scale-105 text-xs md:text-base focus:ring-yellow-200 w-full text-center md:w-auto mb-5" href="/propiedades/crear").py-2.px-10.rounded-md.text-white.font-bold Publicar una propiedad

    //- pre= JSON.stringify(propiedades, undefined, 3)
    if propiedades.length
      div(class="shadow bg-slate-100 rounded-xl")
        ul(class="divide-y divide-gray-200")
          each propiedad in propiedades
            li
              div(class="p-4 w-full flex flex-col sm:flex-row sm:justify-between sm:items-center space-y-8 md:space-y-0 gap-4 overflow-hidden")
                div(class=" sm:w-1/3 flex w-full")
                  img(src=`uploads/${propiedad.imagen}` alt=`Imagen propiedad ${propiedad.titulo}` class="block w-max flex-grow basis-0")
                div(class="sm:w-2/4 md:w-3/6 lg:w-4/6 overflow-hidden space-y-3")
                  a(class="flex items-center text-2xl font-bold whitespace-pre-line underline" href="#")= propiedad.titulo
                    svg(xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6") 
                      path(stroke-linecap="round" stroke-linejoin="round" d="M12.75 15l3-3m0 0l-3-3m3 3h-7.5M21 12a9 9 0 11-18 0 9 9 0 0118 0z")
                  p(class="text-ellipsis font-bold whitespace-pre-line overflow-hidden")= propiedad.categoria.nombre
                  p(class="text-ellipsis font-bold whitespace-pre-line overflow-hidden")= propiedad.precio.nombre
    else
      p.text-center.font-bold.text-2xl No hay propiedades