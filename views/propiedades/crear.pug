extends ../layout/index

block styles
  link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")
    

block contenido
  .py-5
    h1.text-4xl.my-10.font-extrabold.text-center Bienes
      span.font-normal Raices
    h2.text-center.text-2xl.font-semibold= pagina

    div(class="bg-white shadow py-8 px-4 md:px-10 rounded-md mx-auto max-w-4xl my-10")
      form.space-y-8
        div.space-y-8
          h3.text-lg.leading-6.font-medium.text-gray-900 Información General
          p.text-gray-600 Añade Información sobre la propiedad en venta
          div 
            label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="titulo") Título
            input#titulo.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder=`Titulo propiedad, ej: "Casa en la playa"` type="text" name="titulo" class="focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:border-transparent")
          div 
            label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="descripcion") Descripción
            textarea#descripcion(name="descripcion", cols="30", rows="10").w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Ingrese una descripción" class="focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:border-transparent h-24")
          div(class="md:flex gap-5 space-y-5 md:space-y-0")  
            div(class="md:w-1/2") 
              label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="titulo") Categoría
              select#categoria.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder=`Titulo propiedad, ej: "Casa en la playa"` type="text" name="categoria" class="focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:border-transparent")
                option(value="") - Seleccione -
                option(value="Apartamento") Apartamento
                option(value="Casa") Casa

            div(class="md:w-1/2") 
              label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="titulo") Precio
              select#precio.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder=`Titulo propiedad, ej: "Casa en la playa"` type="text" name="precio" class="focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:border-transparent")
                option(value="") - Seleccione -
                option(value="a") $ 500.000 - $ 1'000.000 / COP

          div(class="md:flex gap-5 space-y-5 md:space-y-0")  
            div(class="md:w-1/3") 
              label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="titulo") Habitaciones
              select#habitaciones.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder=`Titulo propiedad, ej: "Casa en la playa"` type="text" name="habitaciones" class="focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:border-transparent")
                option(value="") - Seleccione -
                - let habitaciones = 1;
                  while habitaciones < 6
                    option(value= habitaciones) #{habitaciones++}

            div(class="md:w-1/3") 
              label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="titulo") Estacionamiento
              select#estacionamiento.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder=`Titulo propiedad, ej: "Casa en la playa"` type="text" name="estacionamiento" class="focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:border-transparent")
                option(value="") - Seleccione -
                - let estacionamiento = 1;
                  while estacionamiento < 6
                    option(value= estacionamiento) #{estacionamiento++}

            div(class="md:w-1/3") 
              label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="titulo") Baños
              select#wc.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder=`Titulo propiedad, ej: "Casa en la playa"` type="text" name="wc" class="focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:border-transparent")
                option(value="") - Seleccione -
                - let wc = 1;
                  while wc < 5
                    option(value= wc) #{wc++}
          
          .border-gray-200.border-t.py-5.space-y-5
            h3.text-lg.leading-6.font-medium.text-gray-900 Ubicación de la propiedad
            p.text-gray-600 Debes ubicar la propiedad en el mapa.
            #mapa.h-96

            .block
              p Dirección: 
                span.calle

            input(type="hidden", name="calle", id="calle" value="")
            input(type="hidden", name="lat", id="lat" value="")
            input(type="hidden", name="lng", id="lng" value="")

            

block scripts
  script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
  script(src="https://unpkg.com/esri-leaflet@3.0.8/dist/esri-leaflet.js")
  script(src="https://unpkg.com/esri-leaflet-geocoder@2.2.13/dist/esri-leaflet-geocoder.js")
  script(src="https://cdnjs.cloudflare.com/ajax/libs/leaflet-geosearch/2.7.0/bundle.min.js")
  script(src="/js/mapa.js") 
