extends ../layout/app

block contenido
  //- pre= JSON.stringify(propiedad, undefined, 3)

  h1(class="text-[#4c460e] drop-shadow-lg").text-3xl.font-bold.py-2= pagina
    p.text-lg= propiedad.calle
  div(class="flex relative sm:justify-center md:justify-start w-2/3 flex-col")
    img(src=`/uploads/${propiedad.imagen}`, alt=`${propiedad.titulo}` class="h-[40em] rounded-t-lg w-full mt-10")
    h4(class="bg-transparent/20 z-10 px-10 py-2 absolute left-4 font-semibold rounded-t-3xl text-white")= propiedad.categoria.nombre
    p(class="font font-medium text-md bg-slate-300 py-5 px-2 rounded-b-md")= propiedad.descripcion