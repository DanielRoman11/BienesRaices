  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cloudinary": "^2.0.1",
    "cookie-parser": "^1.4.6",
    "express": "^4.18.2",
    "express-validator": "^6.14.3",
    "jsonwebtoken": "^9.0.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.5",
    "nanoid": "^3",
    "pug": "^3.0.2",
    "sequelize": "^6.35.1",
    "tw-elements": "^1.1.0",
    "nodemailer": "^6.9.7"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.13",
    "concurrently": "^8.0.1",
